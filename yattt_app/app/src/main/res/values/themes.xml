<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Light Theme for the application -->
    <style name="Theme.Yattt_app.Light" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/light_color_primary</item>
        <item name="colorPrimaryVariant">@color/light_color_tertiary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/light_color_secondary</item>
        <item name="colorSecondaryVariant">@color/light_color_tertiary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Navbar color -->
        <item name="android:navigationBarColor">@color/light_color_primary</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- Dark Theme for the application -->
    <style name="Theme.Yattt_app.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/dark_color_primary</item>
        <item name="colorPrimaryVariant">@color/dark_color_tertiary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/dark_color_secondary</item>
        <item name="colorSecondaryVariant">@color/dark_color_tertiary</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Navbar color -->
        <item name="android:navigationBarColor">@color/dark_color_primary</item>
        <item name="android:windowBackground">@color/black</item>
    </style>
</resources>